@model IEnumerable<OzanAhmetDincerBlog.Models.KullaniciBilgisi>

@{
    ViewData["Title"] = "Üye Listesi";
}

<h1>Üye Listesi</h1>

<p>
    <a asp-action="Index">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.IsimSoyisim)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Eposta)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsimSoyisim)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Eposta)
                </td>
                
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new {  id=item.Id  }) |
                    @Html.ActionLink("Detay", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Sil", "Delete", new { id=item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
